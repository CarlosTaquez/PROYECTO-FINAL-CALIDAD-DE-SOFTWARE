			"name": "GET - Geometry3D - Lista de Figuras",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code es 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Respuesta tiene formato JSON\", function () {\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"pm.test(\"Tiene título y descripción\", function () {\r",
							"    const data = pm.response.json();\r",
							"    pm.expect(data).to.have.property('title');\r",
							"    pm.expect(data).to.have.property('description');\r",
							"});\r",
							"\r",
							"pm.test(\"Incluye el array de figuras\", function () {\r",
							"    const data = pm.response.json();\r",
							"    pm.expect(data).to.have.property('figures');\r",
							"    pm.expect(data.figures).to.be.an('array');\r",
							"});\r",
							"\r",
							"pm.test(\"Incluye cubo, esfera, pirámide y cilindro\", function () {\r",
							"    const data = pm.response.json();\r",
							"    const ids = data.figures.map(f => f.id);\r",
							"    pm.expect(ids).to.include('cubo');\r",
							"    pm.expect(ids).to.include('esfera');\r",
							"    pm.expect(ids).to.include('piramide');\r",
							"    pm.expect(ids).to.include('cilindro');\r",
							"});\r",
							"\r",
							"pm.test(\"Tiempo de respuesta menor a 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							""
